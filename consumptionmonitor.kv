#:import Factory kivy.factory.Factory

# definition der Popup-Tastatur
<KeyBordPopup@Popup>:
    auto_dismiss: False
    title: "Wert-Eingabe" 
    BoxLayout:
        orientation: 'vertical'
        # Display-Zeile 
        Label:
            text:""
            id: EingabeListe
        # Tastatur-Layout
        GridLayout:
            cols: 4
            rows: 4
            # Taste 1
            Button:
                text: "1"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            # Taste 2
            Button:
                text: "2"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            # Taste 3
            Button:
                text: "3"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            # Taste Abbruch
            Button:
                text: "X"
                on_release: root.dismiss()
            # Taste 4
            Button:
                text: "4"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            # Taste 5
            Button:
                text: "5"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            # Taste 6
            Button:
                text: "6"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            # Taste "Loesche die komplette Euingabe"
            Button:
                text: "CLR"
                on_press: root.ids.EingabeListe.text=""  
            # Taste 7
            Button:
                text: "7"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            # Taste 8
            Button:
                text: "8"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text 
            # Taste 9
            Button:
                text: "9"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text                               
            # Taste "Loesche das letzte zeichen"
            Button:
                text: "<--"
                on_press: app.DelZeichen(self,root,app)  
            # Taste Komma
            Button:
                text: "."
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text 
            # Taste 0
            Button:
                text: "0"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            # Taste ohne Funktion
            Button:
                text: ""
            # Taste OK
            Button:
                text: "OK"
                on_press: app.SetzeEingabewert(root.ids.EingabeListe.text)
                on_release: root.dismiss()                

# Definition der GUI
<RootWidget>:
    orientation: 'vertical'
    id: Wurzel
    # Definition der Menu-Leiste
    ActionBar:
        pos_hint: {'top':1}
        height: 55
        # Titel der App
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Consumption-Monitor'
                with_previous: False
            ActionOverflow:
            # Button um die Ladungs-Erfassung zu starten
            ActionToggleButton:
                text: 'Connect'
                id: ConectButton
                on_press: root.start_OBD_thread(self,root,app)
            # Anzeige der Aktuellen Zeit (Uhrzeit und Datum)
            ActionButton:
                text: "30.06.2018 -- 14:39"
                id: DatumLabel
                on_parent: root.init_app_thread(self,root,app)
            # Icon für den Verbindungs-Typ
            ActionButton:
                icon: "typ2_ccs_not_connected.png"
                id: ConectorType
            # icon für den Lade-Zustand
            ActionButton:
                icon: "blitz_rot.png"
                id: ChargingState
            # Icon für den Verbindungs-Zustand zum Dongel
            ActionButton:
                icon: "dongel_rot.png"
                id: ComunicationTo
            # Button für "App beenden"
            ActionButton:
                text: 'Quit'
                on_press: app.stop()
    # Platzhalter
    Label:
        text: ""
        size_hint_y: 0.1
        size_hint_min_y: None
    #GUI-Elemente zur Anzeige    
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.6
        # Linke Spalte zur Anzeige der Ladungs-Relevanten-Werte
        BoxLayout:
            orientation: 'vertical'
            # Tachostand
            BoxLayout:
                size_hint_y: 0.5
                orientation: "horizontal"  
                Label:
                    text:" km-Stand\n(Tacho): "
                    width: 20
                    size_hint_y: 1
                    size_hint_min_y: None
                    halign: "left"                    
                Button:
                    id: km_Tacho
                    text: "000000"
                    size_hint_min_y:20
                    on_press: app.OpenKeyBoard(self,root,app) 
                    size_hint_y: 1
                    size_hint_min_y: None                     
                Label:
                    text:" km "
                    width: 50 
                    size_hint_y: 1
                    size_hint_min_y: None 
            # Ladedauer
            BoxLayout:
                orientation: "horizontal"  
                size_hint_y: 0.5
                Label:
                    text:"Ladedauer: "
                    width: 20
                    size_hint_y: 1
                    size_hint_min_y: None 
                    halign: "left"  
                Label:
                    id: ChargeTime
                    text: "0:00"
                    size_hint_y: 1
                    size_hint_min_y: None                            
                Label:
                    text:" Min"
                    width: 50   
                    size_hint_y: 1
                    size_hint_min_y: None
            # Spannung Hilfsbatterie
            BoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.5
                Label:
                    text:"Spannung\nHilfsbatterie: "
                    width: 20
                    size_hint_y: 1
                    size_hint_min_y: None  
                    halign: "left"                      
                Label:
                    text:"0.0"
                    id:VoltBatAux
                    size_hint_y: 1
                    size_hint_min_y: None
                                        
                Label:
                    text:" V "
                    width: 50
                    size_hint_y: 1
                    size_hint_min_y: None
            # Geladene Energie-Menge
            BoxLayout:
                orientation: "horizontal" 
                size_hint_y: 0.5
                Label:
                    text:"Geladene\nEnergiemenge: "
                    width: 20
                    size_hint_y: 1
                    size_hint_min_y: None  
                    halign: "left"                      
                Label:
                    text:"0.0"
                    id:PowerCar
                    size_hint_y: 1
                    size_hint_min_y: None
                                        
                Label:
                    text:" kWh "
                    width: 50
                    size_hint_y: 1
                    size_hint_min_y: None
            # Bezogene Energie-Menge
            BoxLayout:
                orientation: "horizontal" 
                size_hint_y: 0.5
                Label:
                    text:"Bezogene\nEnergiemenge: "
                    width: 20
                    size_hint_y: 1
                    size_hint_min_y: None   
                    halign: "left"                      
                Label:
                    id: PowerCounter
                    text: "0.0"
                    size_hint_y: 1
                    size_hint_min_y: None                                            
                Label:
                    text:" kWh"
                    width: 50
                    size_hint_y: 1
                    size_hint_min_y: None
        # Rechte Spalte mit Abrechnungs-Relevanten Größen
        BoxLayout:
            orientation: 'vertical'
            # Preisbasis: 'Home', 'kWh', 'Minuten', 'Pauschale'
            BoxLayout:
                orientation: "horizontal"  
                Label:
                    text:"Preisbasis:\n "
                    width: 20
                    size_hint_y: 0.1
                    size_hint_min_y: None               
                Spinner:
                    values: ('Home', 'kWh', 'Minuten', 'Pauschale')
                    id: PreisBasis
                    text: "Home"
                    size_hint_y: 0.3
                    size_hint_min_y: None
                Label:
                    text:" "
                    width: 20
                    size_hint_y: 0.1
                    size_hint_min_y: None
            # Platzhalter                    
            Label:
                text: ""
                size_hint_y: 0.1
                size_hint_min_y: None
            # Einheiten-Preis                             
            BoxLayout:
                orientation: "horizontal"
                valign: "middle"
                Label:
                    text:"Preis:\n "
                    width: 20
                    size_hint_y: 0.1
                    size_hint_min_y: None                
                Button:
                    id: Preis
                    text: "0.00"             
                    on_press: app.OpenKeyBoard(self,root,app)
                    size_hint_y: 0.3
                    size_hint_min_y: None 
                Label:
                    text:" €\n "
                    width: 20 
                    size_hint_y: 0.1
                    size_hint_min_y: None
            # Platzhalter
            Label:
                text: ""
                size_hint_y: 0.1
                size_hint_min_y: None 
            # Ladungs-Typ: 'Vollladung', 'Teilladung', 'Stützladung'
            BoxLayout:
                orientation: "horizontal"  
                Label:
                    text:"Ladungstyp:\n "
                    width: 20
                    size_hint_y: 0.1
                    size_hint_min_y: None
                Spinner:
                    text: "Vollladung"
                    values: ('Vollladung', 'Teilladung', 'Stützladung')
                    id: LadungsTyp
                    size_hint_y: 0.3
                    size_hint_min_y: None 
                Label:
                    text:" "
                    width: 20
                    size_hint_y: 0.1
                    size_hint_min_y: None
            # Platzhalter
            Label:
                text: ""
                text_size:self.size
                size_hint_y: 0.1
                size_hint_min_y: None                
    # Platzhalter
    Label:
        text: ""
        text_size:self.size
        size_hint_y: 0.05
        size_hint_min_y: None
        halign: "left"
        valign: "middle"
    # Anzeige des Ladungs-Zustandes (SoC) als Wert und als Balken
    BoxLayout:
        orientation: "horizontal" 
        size_hint_y: 0.1
        Label:
            text:" State of Charge: "
            width: 20 
            size_hint_y: 1
            size_hint_min_y: None         
        ProgressBar:
            max: 100
            id: SoC_Bar
            size_hint_y: 1
            size_hint_min_y: None        
            value: 0
        Label:
            id: SoC_Value
            text:"   0 % "
            width: 100
            size_hint_y: 1
            size_hint_min_y: None
    # Platzhalter
    Label:
        text: ""
        id: Toast
        size_hint_y: 0.1
        size_hint_min_y: None
                

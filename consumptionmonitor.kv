
#:import Factory kivy.factory.Factory

<KeyBordPopup@Popup>:
    auto_dismiss: False
    title: "Wert-Eingabe" 
    BoxLayout:
        orientation: 'vertical'       
        Label:
            text:""
            id: EingabeListe
        GridLayout:
            cols: 4
            rows: 4
            Button:
                text: "1"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            Button:
                text: "2"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            Button:
                text: "3"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            Button:
                text: "X"
                on_release: root.dismiss()                
            Button:
                text: "4"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            Button:
                text: "5"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            Button:
                text: "6"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            Button:
                text: "CLR"
                on_press: root.ids.EingabeListe.text=""                
            Button:
                text: "7"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text
            Button:
                text: "8"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text 
            Button:
                text: "9"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text                               
            Button:
                text: "<--"
                on_press: app.DelZeichen(self,root,app)                 
            Button:
                text: "."
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text    
            Button:
                text: "0"
                on_press: root.ids.EingabeListe.text=root.ids.EingabeListe.text+self.text  
            Button:
                text: ""
            Button:
                text: "OK"
                on_press: app.SetzeEingabewert(root.ids.EingabeListe.text)
                on_release: root.dismiss()                


<RootWidget>:
    orientation: 'vertical'
    id: Wurzel
    ActionBar:
        pos_hint: {'top':1}
        height: 55
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Consumption-Monitor'
                with_previous: False
            ActionOverflow:
            ActionToggleButton:
                text: 'Connect'
                id: ConectButton
                on_press: root.start_OBD_thread(self,root,app)
            ActionButton:
                text: "30.06.2018 -- 14:39"
                id: DatumLabel
                on_parent: root.init_app_thread(self,root,app)
            ActionButton:
                icon: "typ2_ccs_not_connected.png"
                id: ConectorType
            ActionButton:
                icon: "blitz_rot.png"
                id: ChargingState
            ActionButton:
                icon: "dongel_rot.png"
                id: ComunicationTo
            ActionButton:
                text: 'Quit'
                on_press: app.stop()
    Label:
        text: ""
        size_hint_y: 0.1
        size_hint_min_y: None
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.6
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                size_hint_y: 0.5
                orientation: "horizontal"  
                Label:
                    text:" km-Stand\n(Tacho): "
                    width: 20
                    size_hint_y: 1
                    size_hint_min_y: None
                    halign: "left"                    
